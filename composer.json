{
    "name": "larium/http-client",
    "description": "An http client implemention compatible with psr-7 http message.",
    "keywords": ["psr7", "client", "http"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Kollaros",
            "email": "andreas@larium.net"
        }
    ],
    "require": {
        "php": ">=5.4",
        "ext-curl": "*",
        "psr/http-message": "~1.0",
        "php-http/httplug": "~1.1.0",
        "php-http/message": "~1.2.0",
        "php-http/message-factory": "~1.0.2",
        "php-http/discovery": "~1.1.0"
    },
    "require-dev": {
        "zendframework/zend-diactoros": "~1.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Larium\\": "src/"
        }
    },
    "provide": {
        "php-http/client-implementation": "1.0"
    }
}
