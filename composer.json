{
    "name": "larium/http-client",
    "description": "An http client implemention compatible with psr-7 http message.",
    "keywords": ["psr7", "client", "http"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Kollaros",
            "email": "andreas@larium.net"
        }
    ],
    "require": {
        "php": ">=5.4",
        "ext-curl": "*",
        "psr/http-message": "~1.0",
        "zendframework/zend-diactoros": "~1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "2.*",
        "phpunit/phpunit": "4.6.*"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Larium\\": "src/"
        }
    },
    "scripts": {
        "sniff": "vendor/bin/phpcs --standard=PSR1,PSR2 src/",
        "phpunit": "phpunit test/"
    }
}
